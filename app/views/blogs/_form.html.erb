<%= form_with(model: @blog, local: true) do |f| %>

<% if @blog.errors.any? %>
  <div id="error_conten">
    <% @blog.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
    <% end %>
  </div>
<% end %>

  <div class="blog_fill">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="blog_fill">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>

  <div class="button"><%= f.submit %></div>
<% end %>

<p class="to_other_page"><%= link_to "ユーザー投稿一覧へ", blogs_path %></p>
